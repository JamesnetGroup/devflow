<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:DevFlow.Colors.Views"
					xmlns:flows="clr-namespace:DevFlow.LayoutSupport.Controls;assembly=DevFlow.LayoutSupport"
					xmlns:cnvt="clr-namespace:DevFlow.Converter;assembly=DevFlow.Converter">

	<Style TargetType="{x:Type Button}" x:Key="BTN.PASTE">
		<Setter Property="Command" Value="{Binding ContentPasteCommand}"/>
		<Setter Property="CommandParameter" Value="COPY"/>
		<Setter Property="Margin" Value="20 0 0 0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border Background="Transparent">
						<flows:FlowIcon x:Name="icon" IconType="ContentPaste" Width="26" Height="26" Fill="{DynamicResource BRUSH.FONT.H01}" IsHitTestVisible="False"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<Style TargetType="{x:Type Control}" x:Key="CTL.CURRENT">
		<Setter Property="Grid.Row" Value="1"/>
		<Setter Property="Grid.RowSpan" Value="2"/>
		<Setter Property="Grid.Column" Value="0"/>
		<Setter Property="Margin" Value="8 0 4 1"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Control}">
					<Grid>
						<Border Background="{Binding CurrentColor}">
							<TextBox x:Name="text" Text="{Binding CurrentColor}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" 
									 Foreground="{Binding ReverseColor}" IsReadOnly="True" Background="Transparent" BorderThickness="0"/>
						</Border>
						<Border x:Name="border" Background="Transparent"/>
						<StackPanel x:Name="icon" Orientation="Horizontal" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
							<flows:DropImageCanvas x:Name="drop" Background="Transparent">
								<flows:FlowIcon IconType="EyedropperVariant" Width="30" Height="30" Fill="{DynamicResource BRUSH.FONT.H01}" IsHitTestVisible="False"/>
							</flows:DropImageCanvas>
							<Button x:Name="paste" Style="{StaticResource BTN.PASTE}"/>
						</StackPanel>
					</Grid>
					<ControlTemplate.Triggers>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding CurrentColor, Converter={cnvt:EqualsToBooleanConverter}}" Value="false"/>
								<Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="true"/>
							</MultiDataTrigger.Conditions>
							<Setter TargetName="text" Property="Text" Value=""/>
							<Setter TargetName="border" Property="Background" Value="#AA000000"/>
							<Setter TargetName="icon" Property="Visibility" Value="Visible"/>
							<Setter TargetName="drop" Property="Cursor" Value="Hand"/>
							<Setter TargetName="paste" Property="Cursor" Value="Hand"/>
						</MultiDataTrigger>
						<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=flows:Palette}, Path=IsCaptureColor}" Value="True">
							<Setter TargetName="text" Property="Text" Value="{Binding CurrentColor}"/>
							<Setter TargetName="border" Property="Background" Value="Transparent"/>
							<Setter TargetName="icon" Property="Visibility" Value="Collapsed"/>
						</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ListBoxItem}" x:Key="LBXI">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Button x:Name="btn" Command="{Binding ColorClickCommand}" CommandParameter="{Binding}">
						<Button.Resources>
							<Style TargetType="{x:Type Button}">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate>
											<Border Margin="0 0 1 1" Background="{Binding HexColor}" ToolTip="{Binding HexColor}"
                                                       UseLayoutRounding="True" SnapsToDevicePixels="True" Width="20" Height="20"/>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</Button.Resources>
					</Button>
					<ControlTemplate.Triggers>
						<DataTrigger Binding="{Binding ElementName=btn, Path=IsMouseOver}" Value="True">
							<Setter Property="Cursor" Value="Hand"/>
						</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ListBox}" x:Key="LBX">
		<Setter Property="Grid.Row" Value="1"/>
		<Setter Property="Grid.RowSpan" Value="2"/>
		<Setter Property="Grid.Column" Value="1"/>
		<Setter Property="Margin" Value="4 0 8 0"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="Background" Value="{DynamicResource BRUSH.BG}"/>
		<Setter Property="ItemContainerStyle" Value="{StaticResource LBXI}"/>
		<Setter Property="ItemsSource" Value="{Binding ColorMap}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" BorderThickness="0">
						<ItemsPresenter/>
					</ScrollViewer>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
					<UniformGrid Rows="8" Columns="8"/>
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.BASE">
		<Setter Property="Foreground" Value="#ffffff"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="Text" Value="{Binding RelativeSource={RelativeSource AncestorType=TextBlock}, Path=Text}"/>
	</Style>

	<Style TargetType="{x:Type views:ColorSpoid}" BasedOn="{StaticResource {x:Type flows:Palette}}">
        <Setter Property="Title" Value="Color Picker"/>
		<Setter Property="SubTitle" Value="This app is a color picker program."/>
        <Setter Property="DragCaptureCommand" Value="{Binding DragCaptureCommand}"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
					<Border>
						<Grid Margin="1">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>

							<Border Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" Margin="10 30 0 15">
								<TextBlock Text="Color Spoid" Foreground="#FFFFFF" FontSize="13"/>
							</Border>
							
							<Control Style="{StaticResource CTL.CURRENT}"/>

							<ListBox Style="{StaticResource LBX}"/>
							
							<UniformGrid Grid.Row="3" Grid.ColumnSpan="2" Columns="1" Margin="10 30 80 0">
								<flows:ColorSlider x:Name="red" Tag="Red" Value="{Binding Red}" Margin="0 2"/>
								<flows:ColorSlider x:Name="green" Tag="Green" Value="{Binding Green}" Margin="0 2"/>
								<flows:ColorSlider x:Name="blue" Tag="Blue" Value="{Binding Blue}" Margin="0 2"/>
							</UniformGrid>

							<UniformGrid Grid.Row="3" Grid.Column="1" Columns="1" Margin="110 30 0 -4">
								<TextBlock Style="{StaticResource TXB.BASE}" Text="{Binding ElementName=red, Path=Value, StringFormat={}R: {0:N0}}"/>
								<TextBlock Style="{StaticResource TXB.BASE}" Text="{Binding ElementName=green, Path=Value, StringFormat={}G: {0:N0}}"/>
								<TextBlock Style="{StaticResource TXB.BASE}" Text="{Binding ElementName=blue, Path=Value, StringFormat={}B: {0:N0}}"/>
							</UniformGrid>

                        </Grid>
					</Border>
				</DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>




