<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:DevFlow.Finders.Views"
	xmlns:flows="clr-namespace:DevFlow.LayoutSupport.Controls;assembly=DevFlow.LayoutSupport"
	xmlns:convt="clr-namespace:DevFlow.Converter;assembly=DevFlow.Converter">
	
	<Style TargetType="{x:Type views:Finder}" BasedOn="{StaticResource {x:Type flows:Explorer}}">
		<Setter Property="Title" Value="DevFinder"/>
		<Setter Property="ContentTemplate">
			<Setter.Value>
				<DataTemplate>
					<Border>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="300"/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>

							<views:RootTreeView Grid.Column="0" ItemsSource="{Binding Roots}" SelectionCommand="{Binding RootSelectionCommand}"/>
							<views:RootItemView Grid.Column="1" ItemsSource="{Binding CurrentItems}"/>
						</Grid>
					</Border>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
	
	
	
	
	
	
	
	
	
	
