<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:DevFlow.Colors.Views"
					xmlns:flows="clr-namespace:DevFlow.LayoutSupport.Controls;assembly=DevFlow.LayoutSupport"
					xmlns:cnvt="clr-namespace:DevFlow.Converter;assembly=DevFlow.Converter">

	<Style TargetType="{x:Type ListBoxItem}" x:Key="LBXI">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Button x:Name="btn" Command="{Binding ColorClickCommand}" CommandParameter="{Binding}">
						<Button.Resources>
							<Style TargetType="{x:Type Button}">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate>
											<Border Margin="0 0 1 1" Background="{Binding HexColor}" ToolTip="{Binding HexColor}"
                                                       UseLayoutRounding="True" SnapsToDevicePixels="True" Width="20" Height="20"/>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</Button.Resources>
					</Button>
					<ControlTemplate.Triggers>
						<DataTrigger Binding="{Binding ElementName=btn, Path=IsMouseOver}" Value="True">
							<Setter Property="Cursor" Value="Hand"/>
						</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ListBox}" x:Key="LBX">
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="Background" Value="{DynamicResource BRUSH.BG}"/>
		<Setter Property="ItemContainerStyle" Value="{StaticResource LBXI}"/>
		<Setter Property="ItemsSource" Value="{Binding ColorMap}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" BorderThickness="0">
						<ItemsPresenter/>
					</ScrollViewer>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
                    <UniformGrid Rows="8" Columns="8"/>
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.VALUE">
		<Setter Property="Foreground" Value="#ffffff"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="Text" Value="{Binding RelativeSource={RelativeSource AncestorType=TextBlock}, Path=Text}"/>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.RED" BasedOn="{StaticResource TXB.VALUE}">
		<Setter Property="Text" Value="{Binding ElementName=red, Path=Value, StringFormat={}R: {0:N0}}"/>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.GREEN" BasedOn="{StaticResource TXB.VALUE}">
		<Setter Property="Text" Value="{Binding ElementName=green, Path=Value, StringFormat={}G: {0:N0}}"/>
	</Style>

	<Style TargetType="{x:Type TextBlock}" x:Key="TXB.BLUE" BasedOn="{StaticResource TXB.VALUE}">
		<Setter Property="Text" Value="{Binding ElementName=blue, Path=Value, StringFormat={}B: {0:N0}}"/>
	</Style>

	<Style TargetType="{x:Type Control}" x:Key="CTL.CURRENT">
		<Setter Property="Grid.Row" Value="2"/>
		<Setter Property="Grid.RowSpan" Value="2"/>
		<Setter Property="Grid.Column" Value="0"/>
		<Setter Property="Margin" Value="8 0 4 0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Control}">
					<Grid>
						<Border Background="{Binding CurrentColor}">
							<TextBox x:Name="text" Text="{Binding CurrentColor}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" 
									 Foreground="{Binding ReverseColor}" IsReadOnly="True" Background="Transparent" BorderThickness="0"/>
						</Border>
						<Border x:Name="border" Background="Transparent"/>
						<flows:DropImageCanvas x:Name="icon" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
							<flows:FlowIcon IconType="EyedropperVariant" Width="30" Height="30" Margin="10" Fill="{DynamicResource BRUSH.FONT.H01}" IsHitTestVisible="False"/>
						</flows:DropImageCanvas>
					</Grid>
					<ControlTemplate.Triggers>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding CurrentColor, Converter={cnvt:EqualsToBooleanConverter}}" Value="false"/>
								<Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="true"/>
							</MultiDataTrigger.Conditions>
							<Setter TargetName="text" Property="Text" Value=""/>
							<Setter TargetName="border" Property="Background" Value="#AA000000"/>
							<Setter TargetName="icon" Property="Visibility" Value="Visible"/>
						</MultiDataTrigger>
						<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=flows:Palette}, Path=IsCaptureColor}" Value="True">
							<Setter TargetName="text" Property="Text" Value="{Binding CurrentColor}"/>
							<Setter TargetName="border" Property="Background" Value="Transparent"/>
							<Setter TargetName="icon" Property="Visibility" Value="Collapsed"/>
						</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<Style TargetType="{x:Type views:ColorSpoid}" BasedOn="{StaticResource {x:Type flows:Palette}}">
        <Setter Property="Title" Value="Color Picker"/>
		<Setter Property="SubTitle" Value="This app is a color picker program."/>
        <Setter Property="DragCaptureCommand" Value="{Binding DragCaptureCommand}"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
					<Border>
						<Grid Margin="1">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>

							<StackPanel Background="Transparent" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">

                                <flows:DropImageCanvas Background="Transparent">
                                    <flows:FlowIcon IconType="EyedropperVariant" Width="20" Height="20" Margin="10" Fill="{DynamicResource BRUSH.FONT.H01}"
                                                    IsHitTestVisible="False"/>
                                </flows:DropImageCanvas>

							</StackPanel>

							<Border Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" Margin="0 -10 0 0">
								<Grid>
									<TextBlock Grid.Row="1" Grid.ColumnSpan="2"  Text="Color Extraction" Foreground="#FFFFFF" Margin="12"/>
								</Grid>
							</Border>
							
							<Control Style="{StaticResource CTL.CURRENT}"/>

							<ListBox Grid.Row="2" Grid.RowSpan="2" Style="{StaticResource LBX}" Grid.Column="1" Margin="4 0 8 0"/>
							
							<Border Grid.Row="3" Background="{Binding InvertColor}" Grid.Column="0" IsHitTestVisible="False" Margin="8 0 4 0" Visibility="Collapsed">
                                <TextBox Grid.Row="1" Text="{Binding InvertColor}" Height="40"
										 HorizontalContentAlignment="Center" FontSize="15" Foreground="{Binding CurrentColor}"
										   VerticalContentAlignment="Center" IsReadOnly="True" Background="Transparent" BorderThickness="0"/>
                            </Border>

							<!--RGB Slider-->
							<Border Grid.Row="4" Grid.ColumnSpan="2" Background="Transparent" Margin="0 0 0 0">
								<Grid>
									<TextBlock Text="RGB Slider" Foreground="#FFFFFF" Margin="12"/>
								</Grid>
							</Border>
							
							<UniformGrid Grid.Row="5" Grid.ColumnSpan="2" Columns="1" Margin="10 0 80 0">
								<flows:ColorSlider x:Name="red" Minimum="0" Maximum="255" Tag="Red" Value="{Binding Red}" Margin="0 1"/>
								<flows:ColorSlider x:Name="green" Minimum="0" Maximum="255" Tag="Green" Value="{Binding Green}" Margin="0 1"/>
								<flows:ColorSlider x:Name="blue" Minimum="0" Maximum="255" Tag="Blue" Value="{Binding Blue}" Margin="0 1"/>
							</UniformGrid>

							<UniformGrid Grid.Row="5" Grid.Column="1" Columns="1" Margin="100 -1 0 0">
								<TextBlock Style="{StaticResource TXB.RED}"/>
								<TextBlock Style="{StaticResource TXB.GREEN}"/>
								<TextBlock Style="{StaticResource TXB.BLUE}"/>
							</UniformGrid>

                        </Grid>
					</Border>
				</DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>




