    <Style TargetType="{x:Type RadioButton}" x:Key="RDO">
		<Setter Property="Margin" Value="10"/>
		<Setter Property="Command" Value="{Binding SelectSkinCommand}"/>
		<Setter Property="CommandParameter" Value="{Binding}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type RadioButton}">
					<Border x:Name="border" BorderThickness="1" CornerRadius="10" Padding="0" Background="Transparent">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Border Grid.Row="0" Grid.ColumnSpan="2" >
								<Image x:Name="skin" Height="100" Margin="20 20 20 10"/>
							</Border>

                            <Border x:Name="line" Grid.Row="1" BorderThickness="0 1 0 0" Padding="0 10 0 10" Margin="15 0 15 0" 
                                    BorderBrush="{DynamicResource BRUSH.TITLE.BOTTOM.LINE}">
								<Grid HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
									<flows:FlowIcon x:Name="circle" Grid.Column="0" IconType="CheckCircle" 
                                                    HorizontalAlignment="Left"
                                                    Fill="{DynamicResource BRUSH.CHECK.CIRCLE.FALSE}" Margin="0 5 5 5"/>
									<TextBlock x:Name="name" Grid.Column="1" Text="{Binding Name}" Foreground="{DynamicResource BRUSH.CHECK.CIRCLE.FALSE}" Margin="5"
                                               HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
							</Border>
						</Grid>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsChecked" Value="True">
							<Setter TargetName="circle" Property="Fill" Value="{DynamicResource BRUSH.CHECK.CIRCLE}"/>
							<Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BRUSH.CHECK.CIRCLE}"/>
							<Setter TargetName="name" Property="Foreground" Value="{DynamicResource BRUSH.FONT.I01}"/>
                            <Setter TargetName="line" Property="BorderBrush" Value="{DynamicResource BRUSH.CHECK.CIRCLE}"/>
						</Trigger>
						<DataTrigger Binding="{Binding Name}" Value="White">
							<Setter TargetName="skin" Property="Source" Value="{StaticResource PREVIEW.SKIN.WHITE}"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding Name}" Value="Dark">
							<Setter TargetName="skin" Property="Source" Value="{StaticResource PREVIEW.SKIN.DARK}"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding Name}" Value="James">
							<Setter TargetName="skin" Property="Source" Value="{StaticResource PREVIEW.SKIN.JAMES}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Name}" Value="Elena">
                            <Setter TargetName="skin" Property="Source" Value="{StaticResource PREVIEW.SKIN.ELENA}"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<Style TargetType="{x:Type ListBoxItem}" x:Key="LBXI">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ListBoxItem}">
						<RadioButton x:Name="radio" Style="{StaticResource RDO}" 
									 IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"/>
					<ControlTemplate.Triggers>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ListBox}" x:Key="LBX">
		<Setter Property="Margin" Value="10"/>
		<Setter Property="ItemsSource" Value="{Binding Skins}"/>
		<Setter Property="SelectedItem" Value="{Binding CurrentSkin}"/>
		<Setter Property="ItemContainerStyle" Value="{StaticResource LBXI}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ListBox}">
					<Border>
						<ItemsPresenter/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
					<UniformGrid Columns="4"/>
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<Style TargetType="{x:Type views:SwitchSkin}">
		<Setter Property="Width" Value="800"/>
		<Setter Property="Background" Value="{DynamicResource BRUSH.BG}"/>
		<Setter Property="Template">
            <Setter.Value>
				<ControlTemplate TargetType="{x:Type views:SwitchSkin}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
							Padding="0">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<flows:DragBar x:Name="PART_DragBar" Grid.Row="0" BorderThickness="0 0 0 1" 
                                           Padding="30 20 30 20" Background="Transparent"
                                           BorderBrush="{DynamicResource BRUSH.TITLE.BOTTOM.LINE}" Margin="0">
								<TextBlock Text="Theme preferences" Foreground="{DynamicResource BRUSH.FONT.H01}"
                                           FontSize="18"/>
							</flows:DragBar>

							<TextBlock Grid.Row="1" Text="Choose how DevFlow looks to you. Select a single theme, or sync with your system and automatically switch between day and night themes."
									   Foreground="{DynamicResource BRUSH.FONT.I01}" TextWrapping="Wrap" HorizontalAlignment="Stretch"
                                       Margin="30 20 30 20"/>
							
							<ListBox x:Name="lbx" Grid.Row="2" Style="{StaticResource LBX}" Margin="30 0 30 30"/>
						</Grid>
					</Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
