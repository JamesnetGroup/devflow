<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:DevFlow.Languages.Views">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/DevFlow.LayoutSupport;component/Themes/Styles/Preview.xaml"/>
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type views:Translator}" BasedOn="{StaticResource PREVIEW}">
		<Setter Property="Tag" Value="Language Changes"/>
		<Setter Property="Content">
			<Setter.Value>
				<Border>
					<TextBlock Text="한/영" Margin="30" Foreground="{DynamicResource BRUSH.FONT.H01}"/>
				</Border>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
