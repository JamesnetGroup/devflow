<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:DevFlow.Controls;assembly=DevFlow.Controls">
    
    <Style TargetType="{x:Type ctrl:Icon}" x:Key="ICON">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment"  Value="Center"/>
        <Setter Property="Width"  Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Fill" Value="#000000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:Icon}">
                    <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Width}">
                        <Viewbox>
                            <Path Width="24" Height="24" Data="{TemplateBinding Data}" Fill="{TemplateBinding Fill}"/>
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ctrl:Icon}" BasedOn="{StaticResource ICON}"/>

</ResourceDictionary>