<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:DevFlow.Finders.Views"
	xmlns:flows="clr-namespace:DevFlow.LayoutSupport.Controls;assembly=DevFlow.LayoutSupport">

	<Style TargetType="{x:Type views:Finder}" BasedOn="{StaticResource {x:Type flows:Preview}}">
		<Setter Property="Title" Value="Finder"/>
		<Setter Property="ContentTemplate">
			<Setter.Value>
				<DataTemplate>
					<ListView/>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
