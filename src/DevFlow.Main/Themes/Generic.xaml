<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:DevFlow.Main.Views">
    
    <Style TargetType="{x:Type views:MainView}" x:Key="MAINVIEW">
        <Setter Property="Background" Value="Blue"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel>
                            <ContentPresenter/>
                            <TextBlock Text="asdf"/>
                            <TextBlock Text="asdf"/>
                            <TextBlock Text="asdf"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type views:MainView}" BasedOn="{StaticResource MAINVIEW}"/>
    
</ResourceDictionary>
