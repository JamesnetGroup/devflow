<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:DevFlow.Colors.VIews"
					xmlns:flows="clr-namespace:DevFlow.LayoutSupport.Controls;assembly=DevFlow.LayoutSupport">
	<Style TargetType="{x:Type views:ColorPicker}" BasedOn="{StaticResource {x:Type flows:Preview}}">
		<Setter Property="Title" Value="Color Picker"/>
		<Setter Property="SubTitle" Value="This app is color picker programs."/>
		<Setter Property="DragCaptureCommand" Value="{Binding DragCaptureCommand}"/>
		<Setter Property="Content">
            <Setter.Value>
				<Border>
					<StackPanel>
						<Button x:Name="PART_Drag" Content="Drag from here to select a color" Padding="5"/>
						<Image Source="{Binding CaptureImage}" Width="50" Height="50"/>
						</StackPanel>
					</Border>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>


